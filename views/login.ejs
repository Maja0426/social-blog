<% include partials/header %>

<div class="container">
  <div class="card card-box">
    <form action="/login" method="POST">
    <div class="form-group col-md-9 mx-auto">
      <label for="userName">Felhasználó név</label>
      <input type="text" class="form-control" id="userName" placeholder="Ide jöhet a felhasználóneved!" name="username"
        required>
    </div>
    <div class="form-group col-md-9 mx-auto">
      <label for="inputPassword">Jelszó</label>
      <input type="password" class="form-control" id="inputPassword" placeholder="Jöhet a jelszó..." name="password"
        required>
    </div>
    <div class="text-center mt-3">
      <button class="btn btn-success"><i class="fas fa-check-circle"></i> Belépek</button>
      <a class="btn btn-dark" href="/contents"><i class="fas fa-hand-point-left"></i> Vissza</a>
    </div>
  </form>
  <div class="text-center mt-5">
    <a class="text-dark" href="/forgot"><i class="fas fa-key"></i> Elfelejtetted a jelszavad?</a>  
  </div>
  </div>
</div>

<% include partials/footer %>