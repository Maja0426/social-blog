<% include ../partials/header %>

<div class="container">
<div class="text-center text-dark mb-5">
  <h1 class=" display-4 font-weight-bold">- Lapszemle -</h1>
  <p class="d-inline-block alert alert-dark">(Szemezgetés a magyar online sajtóból)</p>
</div>
  <div class="row">
<% mediums.forEach(function(news){ %>
<div class="col-md-4">
  <div class="card mb-5">
    <div class="article-main-img second-article-header">
      <a href="<%= news.url %>" target="_blank">
        <img class="card-img" src="<%= news.urlToImage %>" alt="article title image">
        <h4 class="mt-2">
          <%= news.title %>
        </h4>
      </a>
    </div>
    <p class="card-text text-muted mb-2">
      <%= news.author %> |
      <%= moment(news.publishedAt).format('YYYY. MMMM D. HH:mm') %>
    </p>
  </div>
</div>
<% }) %>
  </div>
</div>

<% include ../partials/footer %>
