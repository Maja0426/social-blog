<% include ../partials/header %>

<div class="container">
  <h1 class="text-center">Hozzászólás szerkesztése</h1>
  <form action="/contents/<%= content_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
    <div class="form-row mt-3">
      <div class="form-group col-md-8 mx-auto">
        <textarea rows="8" class="form-control" name="comment[text]" required><%= comment.text %></textarea>
      </div>
    </div>
    <div class="text-center mb-5">
      <button type="submit" class="btn btn-success"><i class="fas fa-check-circle"></i> Mentés</button>
      <a class="btn btn-dark text-light" href="/contents/<%= content_id %>"><i class="fas fa-hand-point-left"></i> Vissza</a>
    </div>
    
  </form>
</div>

<% include ../partials/footer %>