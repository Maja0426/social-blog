<% include ../partials/header %>

<div class="container">
  <h1 class="text-center">Cikket írok!</h1>

  <form action="/contents" method="POST" enctype="multipart/form-data">
    <div class="form-row">
      <div class="form-group col-md-6 mx-auto">
        <input class="form-control" type="text" placeholder="cím (max. 100 karakter)" name="content[title]" maxlength="100"
          required>
      </div>
    </div>
    <div class="form-row">
      <div class="input-group col-md-6 mx-auto mb-3">
        <input type="file" name="image" accept="image/*" required>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-12 text-center">
        <h4>Válassz kategóriát!</h4>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="content[category]" id="inlineRadio1" value="Közhasznú"
            required>
          <label class="form-check-label" for="inlineRadio1">Közhasznú</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="content[category]" id="inlineRadio2" value="Elvont">
          <label class="form-check-label" for="inlineRadio2">Elvont</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="content[category]" id="inlineRadio3" value="Szórakoztató">
          <label class="form-check-label" for="inlineRadio3">Szórakoztató</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="content[category]" id="inlineRadio4" value="Tudományos">
          <label class="form-check-label" for="inlineRadio4">Tudományos</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="content[category]" id="inlineRadio5" value="Gasztronómia">
          <label class="form-check-label" for="inlineRadio5">Gasztronómia</label>
        </div>

      </div>
    </div>

    <div class="form-row mt-3">
      <div class="form-group col-md-12 mx-auto">
        <textarea rows="12" class="form-control" placeholder="Jöhet az írásod!" name="content[article]" required></textarea>
      </div>
    </div>
    <div class="form-row card-box">
      <div class="form-group text-center col-md-12">
        <button class="btn btn-success"><i class="fas fa-check-circle"></i> Mentem a cikket</button>
        <a class="btn btn-dark" href="/contents"><i class="fas fa-hand-point-left"></i> Vissza</a>
      </div>
    </div>
  </form>
</div>

<% include ../partials/footer %>