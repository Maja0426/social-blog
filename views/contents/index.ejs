<% include ../partials/header %>

<div class="container">
  <div class="jumbotron">
    <h1 class=""><i class="fas fa-bullhorn"></i> PROJECT-1</h1>
  </div>

  <div class="row">

    <!---------------------------- Bal oldali sáv nyitó --------------------------------------->
    <!---------------------------- Keresésnél jelenik meg ------------------------------------->

    <div class="col-md-8 news-feed">
      <% if(searcher === true) { %>
            <div class="tags col-md-12">
              <h3 class=""><span class=""><i class="fas fa-tags"></i></span>Keresési találatok</h3>
                <div class="text-uppercase searched-articles">
                <% contents.forEach(function(content){ %>
                  <div class=""><a class="" href="/contents/<%= content._id %>"> <span class="font-weight-bold badge badge-danger"><%= moment(content.createdAt).format('YYYY.MM.DD') %> </span> <%= content.title %> </a></div>
            <% }) %>
              </div>
            </div>
            <% } %>
      <div class="row">
        <!-- Az első négy cikk borító, a legfrisebbtől számítva, egyesével. A col-md-8 100%-a -->
        <div class="col-md-12">
          <% contents.reverse().slice(0,4).forEach(function(content){ %>
          <div class="card">
            <div class="article-main-img">
              <img class="card-img" src="<%= content.image %>" alt="article title image">
              <div class="card-img-overlay text-light">
                <div class="article-header">
                  <a class="py-2 px-3" href="/contents/<%= content._id %>">
                  <p class="card-text">
                    <b>
                      <%= moment(content.createdAt).format('YYYY. MMMM D. HH:mm') %>
                    </b>
                    <span class="category badge pr-2">#<%= content.category %>
                    </span>
                  </p>
                  <h2 class="card-title">
                      <%= content.title %><strong>
                      </strong>
                  </h2>
                </a>
                </div>
              </div>
            </div>

            <div class="card-body mt-2">
              <div class="feed-paragraph">
                <p class="img-text">
                  <%- content.article.substring(0, 150) %>...
                </p>
              </div>
              <p class="text-uppercase">
                <a class="btn btn-dark btn-sm" href="/contents/<%= content._id %>">Teljes cikk</a>
                <span class="float-right pt-1"><i class="far fa-comments"></i>
                  <%= content.comments.length %> <a class="text-dark" href="/contents/<%= content._id %>/#comments">hozzászólás</a></span>
              </p>
            </div>
          </div>
          <% }) %>
        </div>
      </div>

      <!-- Ez itt a legújabb 3 cikk után következő cikk col-md-6 néretben,
         kettesével. A legfrisebbtől számított következő 4 cikk jelenik meg ------------------->

      <div class="row">
        <% contents.slice(4, 8).forEach(function(content){ %>
        <div class="col-md-6">
          <div class="card">
            <div class="article-main-img">
              <img class="card-img" src="<%= content.image %>" alt="article title image">
              <div class="card-img-overlay text-light">
                <div class="article-header py-2 px-3">
                  <a class="py-2 px-3" href="/contents/<%= content._id %>">
                  <p class="card-text">
                    <b>
                      <%= moment(content.createdAt).format('YYYY. MMMM D. HH:mm') %>
                    </b>
                    <span class="category badge pr-2">#<%= content.category %>
                    </span>
                  </p>
                  <h5 class="card-title font-weight-bold">
                      <%= content.title %><strong>
                      </strong>
                  </h5>
                </a>
                </div>
              </div>
            </div>

            <div class="card-body mt-2">
              <div class="feed-paragraph">
                <p class="img-text small-text">
                  <%- content.article.substring(0, 100) %>...
                </p>
              </div>
              <p class="text-uppercase">
                <a class="btn btn-dark btn-sm" href="/contents/<%= content._id %>">Teljes cikk</a>
                <span class="float-right pt-1"><i class="far fa-comments"></i>
                  <%= content.comments.length %> <a class="text-dark" href="/contents/<%= content._id %>/#comments">hozzászólás</a></span>
              </p>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
    <!------------------------------- Bal oldali sáv záró -------------------------------------->

    <!------------------------------ Jobb oldali sáv nyitó ------------------------------------->
    <div class="col-md-4">
      <div class="row">
        <div class="col-md-12">

            <div class="tags">
              <h3 class="mb-4"><span class=""><i class="far fa-chart-bar"></i></span> Oldal statisztika</h3>
              <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  Talált cikkek száma
                  <span class="badge badge-dark">
                    <%= contents.length %></span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  Regisztrált felhasználók
                  <span class="badge badge-dark">
                    <%= allUser.length %></span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  Hozzászólások száma
                  <span class="badge badge-dark">
                    <%= allComment.length %></span>
                </li>
              </ul>
            </div>

            <div class="tags">
              <h3 class="mt-4 mb-4"><span class=""><i class="fas fa-tags"></i></span> Mai cikkek</h3>
                <div class="text-uppercase daily-articles">
                <% contents.forEach(function(content){ %>
              <% if(moment().format('YYYYMMD') === moment(content.createdAt).format('YYYYMMD')){ %>
                  <div class=""><a class="" href="/contents/<%= content._id %>"> <span class="font-weight-bold badge badge-danger"><%= moment(content.createdAt).format('HH:mm') %> </span> <%= content.title %> </a></div>
            <% } %>
            <% }) %>
              </div>
            </div>

          <div class="tags">
            <h3 class="mt-4 mb-4"><span class=""><i class="fab fa-adversal"></i></span> Hirdetések</h3>
            <p class="py-0 text-uppercase">
              <div class="card">
                <img class="card-top-img" src="https://images.pexels.com/photos/341014/pexels-photo-341014.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500"
                  alt="">
              </div>
              <div class="card">
                <img class="card-top-img" src="https://images.pexels.com/photos/788662/pexels-photo-788662.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500"
                  alt="">
              </div>
            </p>
          </div>

          <div class="tags new-articles">
              <h3 class="my-4">
                <span class=""><i class="far fa-newspaper"></i>
                </span>Korábbi cikkek</h3>
                <div class="">
                  <% contents.slice(8).forEach(function(content){ %>
                    <img class="card-img" src="<%= content.image %>" alt="article title image">
                  <div class="news-feed-lines mb-3">
                <a class="" href="/contents/<%= content._id %>">
                  <b><%= content.title %></b><br>
                  <span class="text-uppercase small">-
                      <%= content.author.username %>
                    </span>
                      <span class="float-right">
                      <%= moment(content.createdAt).fromNow() %>
                    </span>
                </a>
              </div>
              <% }) %>
                </div>
            </div>
            </div>
      </div> <!-- row záró div-->
      </div>
    <!------------------------------- Jobb oldali sáv záró ------------------------------------->
  </div> <!-- Ez a legelső "Basic" row záró div-je -->
  <div class="row">
      <!----------------- A maradék cikkek, x db. egymás után, sima szalag, btn ---------------->
      <% if(contents.length > 8) { %> <!-- Ha több cikk van mint 7 akkor jelenik meg -->
        <div class="col-md-12 mb-2">
          <h2 class="text-center">További cikkek</h2>
        </div>
        <% contents.slice(8).forEach(function(content){ %>
          <div class="col-md-6 news-feed-lines mb-2">
          <a class="" href="/contents/<%= content._id %>">
            <b><%= content.title %></b> | <%= moment(content.createdAt).format('YYYY. MMMM D. HH:mm') %><!-- <span class="category badge">|<%= content.category %> </span> -->
          </a>
          </div>
          <% }) %>
      <% } %>
      <!-------------------------- A maradék cikk blokk lezárása ------------------------------->
    </div>
</div> <!-- A fő container záró div-je -->

<% include ../partials/footer %>