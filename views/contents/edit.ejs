<% include ../partials/header %>

<div class="container">
  <h1 class="text-center font-weight-bold">[
    <%= content.title %> ] szerkesztése</h1>

  <form action="/contents/<%= content._id %>?_method=PUT" method="POST">
    <div class="form-row">
      <div class="form-group col-md-6 mx-auto">
        <input class="form-control" type="text" value="<%= content.title %>" name="blog[title]" maxlength="70" required>
      </div>
    </div>
    <!-- <div class="form-row">
      <div class="form-group col-md-6 mx-auto">
        <div class="col-md-12 text-center edit-img">
          <img class="mb-3 rounded" src="<%= content.image %>" alt="article image">
        </div>
        <div class="form-group col-md-6 mx-auto">
        <input type="file" name="image"  value="<%= content.image %>" >
      </div>
      </div>
    </div> -->
    <div class="form-row">
      <div class="form-group col-md-12 text-center">
        <h4>Válaszz kategóriát!</h4>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="blog[category]" id="inlineRadio1" value="Közhasznú"
            required>
          <label class="form-check-label" for="inlineRadio1">Közhasznú</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="blog[category]" id="inlineRadio2" value="Elvont">
          <label class="form-check-label" for="inlineRadio2">Elvont</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="blog[category]" id="inlineRadio3" value="Szórakoztató">
          <label class="form-check-label" for="inlineRadio3">Szórakoztató</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="blog[category]" id="inlineRadio4" value="Tudományos">
          <label class="form-check-label" for="inlineRadio4">Tudományos</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="blog[category]" id="inlineRadio5" value="Gasztronómia">
          <label class="form-check-label" for="inlineRadio5">Gasztronómia</label>
        </div>
      </div>
    </div>

    <div class="form-row mt-3">
      <div class="form-group col-md-12 mx-auto">
        <textarea rows="12" class="form-control feed-paragraph" name="blog[article]" required><%- content.article %></textarea>
      </div>
    </div>
    <div class="form-row card-box">
      <div class="form-group text-center col-md-12">
        <button type="submit" class="btn btn-success"><i class="fas fa-check-circle"></i> Mentem a cikket</button>
        <a class="btn btn-dark" href="/contents/<%= content._id %>"><i class="fas fa-hand-point-left"></i> Vissza</a>
      </div>
    </div>
  </form>
</div>

<% include ../partials/footer %>