<% include ./partials/header %>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-4 parent">
      <div class="superMenuLeft mb-4">
        <div class="tags">
          <h3>Oldal statisztika</h3>
          <ul class="list-group">
            <li class="list-group-item d-flex justify-content-between align-items-center">
              Cikkek száma
              <span class="badge badge-dark">
                <%= allContent.length %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              Regisztrált felhasználók
              <span class="badge badge-dark">
                <%= allUser.length %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              Hozzászólások száma
              <span class="badge badge-dark">
                <%= allComment.length %></span>
            </li>
          </ul>
        </div>

        <div class="">
          <a class="" href="#regUsers">Regisztrált felhasználók</a>
     
        </div>
      </div>
    </div>

    <div class="col-md-8">
      <div id="regUsers" class="tags">
        <h3>Regisztrált felhasználók</h3>
        <ul class="list-unstyled">
          <% allUser.forEach(function(user){ %>
          <li class="media mb-3 comments-avatar">
            <img src="<%= user.avatar %>" class="mr-3" alt=" profile image">
            <div class="media-body">
              <h6 class="mt-0 my-1"><b class="">Név: </b>
                <%= user.lastName + " " + user.firstName %><br>
                <b class="">Felhasználónév: </b>
                <a href="/users/<%= user._id %>" class=""><%=user.username %></a><br>
              </h6>
              <b class=""> Regisztrált: </b>
                <%= moment(user.userCreated).format('YYYY. MMMM D. HH:mm') %><br>
              <b class="">Emailcím: </b><a href="mailto:<%= user.email %>"> <%= user.email %></a><br>
              <details>
                <summary><b>Cikkek: </b> 
              <% var num = 0 %>
              <% allContent.forEach(function(content) { %>
               <% if(content.author.id.equals(user._id)) { %>
              <% num += 1 %>
                <% } %>
              <% }) %>
                 <%= num %> db.</summary>
                 <% var num = 0 %>
              <% allContent.forEach(function(content) { %>
               <% if(content.author.id.equals(user._id)) { %>
              <a class="small mr-2 text-d" href="/contents/<%= content._id %>">[<%= content.title %>]</a>
                <% } %>
              <% }) %>
              </details>
              <details>
                <summary>
                  <b>Kommentek: </b>
                 <% var num = 0 %>
              <% allComment.forEach(function(comment) { %>
               <% if(comment.author.id.equals(user._id)) { %>
              <% num += 1 %>
                <% } %>
              <% }) %>
                 <%= num %> db.
                </summary>
                <% var num = 0 %>
              <% allComment.forEach(function(comment) { %>
               <% if(comment.author.id.equals(user._id)) { %>
              <span class="small mr-2">[<%= comment.text %>]</span>
                <% } %>
              <% }) %>
              </details>
              <div class="mt-2">
                <form class="d-inline" action="/users/<%= user._id %>?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i> Felhasználó törlése</button>
            <a href="#" class="btn btn-sm btn-success"><i class="far fa-comment-alt"></i> Üzenet </a>
            <div class="ml-4">
              <input type="checkbox" class="form-check-input" id="exampleCheck1" required>
              <label class="form-check-label" for="exampleCheck1">Biztosan törlöm!</label>
            </div>
          </form>
              </div>
            </div>
          </li>
          <hr>
          <% }) %>
        </ul>
      </div>
      <div id="register" class="tags pt-10">
        <h3>Regisztráció menete</h3>
        <p class="p-3">Lorem ipsum dolor sit amet consectetur adipisicing elit. Voluptatem iure quibusdam perspiciatis
          voluptates consequuntur modi ipsum et dicta aliquam. Et veritatis explicabo velit id necessitatibus non error
