<% include partials/header %>

<div class="container">
  <div class="card card-box">
<form action="/register" method="POST" class="">
  <div class="form-group col-md-9 mx-auto">
    <label for="userName">Felhasználó név</label>
    <input type="text" class="form-control" id="userName" placeholder="Ide jöhet a felhasználóneved!" name="username" required>
  </div>
  <div class="form-group col-md-9 mx-auto">
    <label for="userEmai">Email cím</label>
    <input type="email" class="form-control" id="userEmail" aria-describedby="emailHelp" placeholder="Ide meg az email címed!" name="email" required>
    <small id="emailHelp" class="form-text text-muted">Soha nem adjuk ki illetékteleneknek az email címed. Tényleg.</small>
  </div>
  <div class="form-group col-md-9 mx-auto">
    <label for="inputPassword">Jelszó</label>
    <input type="password" class="form-control" id="inputPassword" aria-describedby="passwdHelp" placeholder="Jöhet a jelszó..." name="password" required>
    <small id="passwdHelp" class="form-text">Ne feledd!! Minimum 8 karakter, nagybetű, szám és/vagy speciális karakter legyen! Téged véd az erős jelszó!</small>
  </div>
  <div class="form-group form-check col-md-9 mx-auto">
    <input type="checkbox" class="form-check-input" id="exampleCheck1" required>
    <label class="form-check-label" for="exampleCheck1">Tudomásul vettem az <a class="" href="/gdpr" target="_blank">adatkezelési tájékoztatóban</a> foglaltakat, és elfogadom azt.</label>
    <div class="text-center mt-3">
      <button class="btn btn-success"><i class="fas fa-check-circle"></i> Regisztrálok</button>
    <a class="btn btn-dark" href="/contents"><i class="fas fa-hand-point-left"></i> Vissza</a>
    </div>
  </div>
</form>
</div>
</div>

<% include partials/footer %>