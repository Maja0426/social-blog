<!DOCTYPE html>
<html lang="hu">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU"
    crossorigin="anonymous">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
    crossorigin="anonymous">
  <link rel="icon" href="/images/smart-bee.png">
  <link rel="stylesheet" href="/css/style.css">
  <title>PROJECT-1</title>
  <% moment.locale("hu") %>
</head>

<body id="pageTop">
  <header class="header-bottom">
    <!-- Fixed navbar -->
    <nav class="navbar navbar-expand-md navbar-light fixed-top bg-light">
      <span class="nav-item <%= typeof page !== 'undefined' && page === 'mainPage' ? 'activeMenu' : '' %>">
        <a class="btn btn-outline-yellow" href="/contents"><i class="fas fa-home"></i></a>
      </span>
      <form class="form-inline mr-auto" action="/contents" method="GET">
        <div class="input-group">
          <input class="search-bar" type="text" aria-describedby="btn-add-on" name="search" placeholder="gyorskeresés">
          <div class="input-group-append">
            <button class="btn btn-custom-d" id="btn-add-on"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
      <button class="navbar-toggler ml-auto" type="button" data-toggle="collapse" data-target="#navbarCollapse"
        aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav">
          <li class="nav-item <%= typeof page !== 'undefined' && page === 'writeNew' ? 'activeMenu' : '' %>">
            <a class="btn btn-outline-yellow" href="/contents/new"><i class="fas fa-marker"></i> Cikket írok </a>
          </li>
          <li class="nav-item dropdown <%= typeof page !== 'undefined' && page === 'anotherNews' ? 'activeMenu' : '' %>">
            <a class="nav-link btn btn-outline-yellow" href="#" id="dropdown01" data-toggle="dropdown"
              aria-haspopup="true" aria-expanded="false">Hírcsokor
            </a>
            <div class="dropdown-menu" aria-labelledby="dropdown01">
              <a class="dropdown-item" href="/mediums/science">Tudomány</a>
              <a class="dropdown-item" href="/mediums/technology">Technológia</a>
              <a class="dropdown-item" href="/mediums/sports">Sport</a>
              <a class="dropdown-item" href="/mediums/health">Egészség</a>
              <a class="dropdown-item" href="/mediums/business">Üzlet</a>
              <a class="dropdown-item" href="/mediums/entertainment">Szórakozás</a>
            </div>
          </li>
          <li class="nav-item <%= typeof page !== 'undefined' && page === 'help' ? 'activeMenu' : '' %>">
            <a class="btn btn-outline-yellow" href="/help"><i class="fas fa-question"></i> Súgó</a>
          </li>
          <% if(currentUser && currentUser.username === "Supervisor") { %>
          <li class="nav-item <%= typeof page !== 'undefined' && page === 'superVisor' ? 'activeMenu' : '' %>">
            <a class="btn btn-outline-yellow" href="/supervisor">SUPERVISOR</a>
          </li>
          <% } %>
        </ul>
        <ul class="navbar-nav ml-auto">
          <% if(!currentUser) { %>
          <li class="nav-item <%= typeof page !== 'undefined' && page === 'login' ? 'activeMenu' : '' %>">
            <a class="btn btn-outline-yellow" data-toggle="modal" data-target="#userLogin" href="/login"><i class="fas fa-sign-in-alt"></i>
              Belépés </a>
          </li>
          <li class="nav-item <%= typeof page !== 'undefined' && page === 'register' ? 'activeMenu' : '' %>">
            <a class="btn btn-outline-yellow" data-toggle="modal" data-target="#userRegister" href="/register"><i class="fas fa-user-plus"></i>
              Regisztráció</a>
          </li>
          <% } else { %>
          <li class="nav-item <%= typeof page !== 'undefined' && page === 'profile' ? 'activeMenu' : '' %>">
            <a class="btn btn-outline-yellow" href="/users/<%= currentUser._id %>">Bejelenkezve mint: <b class=""><u>
                  <%= currentUser.username %></u></b></a>
          </li>
          <li class="nav-item">
            <a class="btn btn-outline-yellow" href="/logout"><i class="fas fa-sign-out-alt"></i> Kilépés</a>
          </li>
          <% } %>
        </ul>
      </div>
    </nav>
  </header>

  <div class="container">
    <% if(error && error.length > 0) { %>
    <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
      <%= error %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <% } %>
    <% if(success && success.length > 0) { %>
    <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
      <%= success %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <% } %>
  </div>

  <% include login %>


  <section class="content">