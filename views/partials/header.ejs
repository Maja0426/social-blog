<!DOCTYPE html>
<html lang="hu">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU"
    crossorigin="anonymous">
  <link rel="stylesheet" href="https://bootswatch.com/4/materia/bootstrap.min.css">
  <link rel="icon" href="/images/smart-bee.png">
  <link rel="stylesheet" href="/css/alternative.css">
  <title>PROJECT-1</title>
  <% moment.locale("hu") %>
</head>

<body id="pageTop">
  <header class="header-bottom">
    <!-- Fixed navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top bg-primary">
      <span class="nav-item <%= typeof page !== 'undefined' && page === 'mainPage' ? 'activeMenu' : '' %>">
        <a class="btn btn-primary" href="/contents"><i class="fas fa-home"></i></a>
      </span>
      <form class="form-inline mr-auto" action="/contents" method="GET">
      <input class="form-control mx-sm-2 search-bar" type="text" name="search" placeholder="Gyorskeresés">
      <button class="btn btn-secondary my-2 my-sm-0 ml-sm-1" type="submit"><i class="fas fa-search"></i></button>
    </form>
      <button class="navbar-toggler ml-auto" type="button" data-toggle="collapse" data-target="#navbarCollapse"
        aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav">
          <li class="nav-item <%= typeof page !== 'undefined' && page === 'blogs' ? 'activeMenu' : '' %>">
            <a class="nav-link btn btn-primary" href="/blogs">Blogok</a>
          </li>
          <% if(currentUser) { %>
            <li class="nav-item <%= typeof page !== 'undefined' && page === 'newBlog' ? 'activeMenu' : '' %>">
            <a class="nav-link btn btn-primary" href="/blogs/new">Blog írása</a>
          </li>
          <% } %>
          <li class="nav-item dropdown <%= typeof page !== 'undefined' && page === 'anotherNews' ? 'activeMenu' : '' %>">
            <a class="nav-link btn btn-primary" href="#" id="dropdown01" data-toggle="dropdown"
              aria-haspopup="true" aria-expanded="false"><i class="fas fa-caret-down"></i> Lapszemle
            </a>
            <div class="dropdown-menu" aria-labelledby="dropdown01">
              <a class="dropdown-item" href="/mediums/science">Tudomány</a>
              <a class="dropdown-item" href="/mediums/technology">Technológia</a>
              <a class="dropdown-item" href="/mediums/sports">Sport</a>
              <a class="dropdown-item" href="/mediums/business">Üzlet</a>
              <a class="dropdown-item" href="/mediums/entertainment">Szórakozás</a>
            </div>
          </li>
          <li class="nav-item <%= typeof page !== 'undefined' && page === 'help' ? 'activeMenu' : '' %>">
            <a class="nav-link btn btn-primary" href="/help">Súgó</a>
          </li>
          <% if(currentUser && currentUser.username === "Supervisor") { %>
          <li class="nav-item <%= typeof page !== 'undefined' && page === 'superVisor' ? 'activeMenu' : '' %>">
            <a class="nav-link btn btn-primary" href="/supervisor">SUPERVISOR</a>
          </li>
          <% } %>
        </ul>
        <ul class="navbar-nav ml-auto">
          <% if(!currentUser) { %>
          <li class="nav-item <%= typeof page !== 'undefined' && page === 'login' ? 'activeMenu' : '' %>">
            <a class="nav-link btn btn-primary" data-toggle="modal" data-target="#userLogin" href="/login"><i class="fas fa-sign-in-alt"></i>
              Belépés </a>
          </li>
          <li class="nav-item <%= typeof page !== 'undefined' && page === 'register' ? 'activeMenu' : '' %>">
            <a class="nav-link btn btn-primary" data-toggle="modal" data-target="#userRegister" href="/register"><i class="fas fa-user-plus"></i>
              Regisztráció</a>
          </li>
          <% } else { %>
          <li class="nav-item <%= typeof page !== 'undefined' && page === 'profile' ? 'activeMenu' : '' %>">
            <a class="nav-link btn btn-primary" href="/users/<%= currentUser._id %>">Bejelenkezve mint: <b class="">
                  <%= currentUser.username %></b></a>
          </li>
          <li class="nav-item">
            <a class="nav-link btn btn-primary" href="/logout"><i class="fas fa-sign-out-alt"></i> Kilépés</a>
          </li>
          <% } %>
        </ul>
      </div>
    </nav>
  </header>

  <div class="container mt-3">
    <% if(error && error.length > 0) { %>
    <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
      <%= error %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <% } %>
    <% if(success && success.length > 0) { %>
    <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
      <%= success %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <% } %>
  </div>

  <% include login %>


  <section class="content">