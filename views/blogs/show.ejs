<% include ../partials/header_blogs %>

<div class="container">

  <div class="row">
    <div class="col-md-12 news-show">
      <div class="card">
        <img class="card-img-top" src="<%= blog.image %>" alt="blog image">
        <div class="pt-3">
          <h1 class="font-weight-bold text-uppercase"><%= blog.title %>
          </h1>
         
          <h5 class="my-1">
            <div class="float-left pr-2 pb-1">
              <img src="<%= blog.author.avatar %>" width="80px;" alt="profile image">
            </div>
             <a class="text-dark font-weight-bold" href="/users/<%= blog.author.id %>"><%= blog.author.username %></a>, <span class="text-muted">
                <%= moment(blog.createdAt).format('YYYY. MMMM D. dddd') %></span><br>
          </h5>
        </div>
          <div class="feed-paragraph">
            <p>
              <%- blog.article %>
            </p>
          </div>
        <div class="">
          <% if(currentUser && blog.author.id.equals(currentUser._id)) { %>
          <a class="btn btn-warning" href="/blogs/<%= blog._id %>/edit"><i class="fas fa-edit"></i> Szerkeszt</a>
           <% } %>
           <% if(currentUser && blog.author.id.equals(currentUser._id) || currentUser && currentUser.isAdmin) { %>
          <form class="d-inline" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
            <button class="btn btn-danger"><i class="fas fa-trash-alt"></i> Töröl</button>
          </form>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <div id="comments" class="row mt-4">
    <div class="col-md-8">
      <div class="card comments-card mb-5">
        <div class="">
          <h4 class="font-weight-bold p-1 mt-2">Hozzászólások száma: 
            <%= blog.comments.length%>
          </h4>
        </div>
        <% blog.comments.forEach(function(comment) { %>
        <div class="media mt-2 comments-avatar">
          <img class="align-self-start m-2" src="<%= comment.author.avatar %>" alt="Generic placeholder image">
          <div class="media-body">

            <h6 class="mt-2 pl-2 d-inline-block"><a class="text-dark" href="/users/<%= comment.author.id %>"><b>
                  <%= comment.author.username %></b></a>,
              <span>
                <%= moment(comment.createdAt).fromNow() %>
              </span>
            </h6>
            <div class="float-right">
              <% if(currentUser && comment.author.id.equals(currentUser._id)) { %>
              <a class="btn btn-sm btn-warning mr-2" href="/blogs/<%= blog._id %>/comments/<%= comment._id %>/edit"><i
                  class="fas fa-edit"></i> Szerkeszt</a>
            <% } %>
            <% if(currentUser && comment.author.id.equals(currentUser._id) || currentUser && currentUser.isAdmin) { %>
              <form class="d-inline" action="/blogs/<%= blog._id %>/comments/<%= comment._id %>?_method=DELETE"
                method="POST">
                <button class="btn btn-sm btn-danger"><i class="fas fa-trash-alt"></i> Töröl</button>
              </form>
              <% } %>
            </div>

            <p class="px-2 text-dark">
              <%= comment.text %>
            </p>
          </div>
        </div>
        <hr>
        <% }) %>
        <% if(currentUser) { %> 
        <div class="mt-3">
          <form action="/blogs/<%= blog._id %>/comments" method="POST">
            <h4>Új hozzászólás írása</h4>
            <div class="form-row">
              <div class="form-group col-md-12 mx-auto">
                <textarea rows="3" class="form-control" placeholder="Jöhet a véleményed!" name="comment[text]" required></textarea>
              </div>
            </div>
            <div class="d-flex mb-2 justify-content-end">
              <button type="submit" class="btn btn-primary"><i class="fas fa-pencil-alt"></i></i> Hozzászólás
                közzététele</button>
            </div>
          </form>
        </div>
        <% } else { %>
          <span class="p-2 alert alert-warning text-d mt-3">Hozzászólás írásához be kell jelentkezned!</span>
          <% } %>
      </div>
    </div>
    <div class="col-md-4">

      <div class="tags mb-5">
        <h3 class="mt-4 mb-4"><span class=""></span> A szerzőről</h3>
        <p class="ml-2 py-0 text-uppercase">
          <ul class="list-group">
            <li class="list-group-item">
              <%= blog.author.bio %>
            </li>
          </ul>
        </p>
      </div>

    </div>
  </div>
</div>

<% include ../partials/footer %>