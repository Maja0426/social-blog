<% include ../partials/header_blogs %>

<div class="container">
<div class="row">
  <div class=" col-md-12">
    <h3 class="text-center"><span class=""></span>Talált blogok:
      <%= blogs.length %> db.</h3>
<ul class="list-unstyled user-articles">
  <% blogs.forEach(function(blog) { %>
  <a class="" href="/blogs/<%= blog._id %>">
    <li class="media mb-2">
      <img src="<%= blog.image %>" class="mr-3" alt="blog borítókép">
      <div class="media-body mx-2 my-2">
        <h6 class=""><span class="font-weight-bold"><%= moment(blog.createdAt).format('YYYY.MM.DD') %></span> | <%= blog.title %>
        </h6>
        <p><b class="badge badge-light"><%= blog.author.username %></b></p>
      </div>
    </li>
    <hr>
  </a>
  <% }) %>
</ul>
  </div>
</div>
</div>

<% include ../partials/footer %>

