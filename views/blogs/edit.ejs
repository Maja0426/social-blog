<% include ../partials/header_blogs %>

<div class="container">
  <h1 class="text-center font-weight-bold">[
    <%= blog.title %> ] szerkesztése</h1>

  <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
    <div class="form-row">
      <div class="form-group col-md-6 mx-auto">
        <input class="form-control" type="text" value="<%= blog.title %>" name="blog[title]" maxlength="70" required>
      </div>
    </div>

    <div class="form-row mt-3">
      <div class="form-group col-md-12 mx-auto">
        <textarea rows="12" class="form-control feed-paragraph" name="blog[article]" required><%- blog.article %></textarea>
      </div>
    </div>
    <div class="form-row card-box">
      <div class="form-group text-center col-md-12">
        <button type="submit" class="btn btn-success"><i class="fas fa-check-circle"></i> Mentem a blogbejegyzést</button>
        <a class="btn btn-dark" href="/blogs/<%= blog._id %>"><i class="fas fa-hand-point-left"></i> Vissza</a>
      </div>
    </div>
  </form>
</div>

<% include ../partials/footer %>